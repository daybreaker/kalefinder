<div class="left-box">
  <h1><%= @package.name %></h1>
  <p><%= @package.description %></p>

  <div id="suggestions">
    <h2>Our Top Suggestions</h2>
    <ol>
      <% @places[0..14].each do |place| %>
        <li><%= place.short_name %>
      <% end %>
    </ol>
  </div>
</div>
<div id="map-canvas" style="width: 700px; height: 500px; float: right;"/>

<script>
  heatMapPoints = [
    <% @places.each do |place| %>
      <%= "{ location: new google.maps.LatLng(#{place.lat}, #{place.long}), weight: #{place.score(@package)}}," %>
    <% end %>
  ];
</script>


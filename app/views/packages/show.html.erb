<h1><%= @package.name %></h1>
<p><%= @package.description %></p>

<ol>
  <% @places.each do |place| %>
    <li><%= place.short_name %>
  <% end %>
</ol>

<div id="map-canvas" style="width: 800px; height: 400px;"/>

<script>
  heatMapPoints = [
    <% @places.each do |place| %>
